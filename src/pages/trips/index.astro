---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const trips = (await getCollection('trips')).sort((a,b) => +b.data.date - +a.data.date);
---

<html lang="en">
  <head>
    <BaseHead title="Trips • Hogg Country" description="Trips across Arkansas, Colorado, and beyond." />
  </head>
  <body>
    <Header />
    <main>
      <section class="hero" style="padding-bottom:1.25rem;">
        <div class="container">
          <h1 class="font-display">Trips</h1>
          <p>Hikes and adventures — Arkansas, Colorado, and beyond.</p>
        </div>
      </section>

      <section>
        <div class="container">
          <div style="display:grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 1rem;">
            {trips.map(({ id, data }) => (
              <article class="card">
                <a href={`/trips/${id}/`} style="display:block; color:inherit; text-decoration:none;">
                  <div style="padding:1rem 1rem .5rem;">
                    <h2 class="clamp-2">{data.title}</h2>
                    <div style="color:#9aa3b2; font-size:.9rem; margin-top:.15rem;">
                      <FormattedDate date={data.date} />
                    </div>
                    <div class="badges">
                      {data.state && <span class="badge"><strong>State</strong> {data.state}</span>}
                      {data.distance_miles && <span class="badge"><strong>Distance</strong> {data.distance_miles} mi</span>}
                      {data.elevation_gain_ft && <span class="badge"><strong>Gain</strong> {data.elevation_gain_ft} ft</span>}
                      {data.difficulty && <span class="badge"><strong>Difficulty</strong> {data.difficulty}</span>}
                      {(data.tags && data.tags[0]) && <span class="badge">#{data.tags[0]}</span>}
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
