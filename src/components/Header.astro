---
import { SITE_TITLE } from '../consts';

const pathname = Astro.url.pathname;
const isGuide = pathname.startsWith('/guide') && !pathname.includes('/guide/quick') && !pathname.match(/\/guide\/\d/);
const isGuidePage = pathname === '/guide' || pathname === '/guide/';
const isTools = pathname.startsWith('/tools');
---

<header class="header" id="site-header">
  <nav class="container nav">
    <div class="nav-left">
      <h2 class="brand">
        <a href="/" aria-label="Hogg Country" class="font-display">{SITE_TITLE}</a>
      </h2>
      <a href="/guide" class={`nav-link ${isGuide ? 'is-active' : ''}`}>Field Guide</a>
      <a href="/tools" class={`nav-link ${isTools ? 'is-active' : ''}`}>Tools</a>
    </div>

    {isGuidePage && (
      <div class="guide-actions">
        <button id="download-guide-btn" class="action-btn">
          <span class="action-icon">â†“</span>
          <span class="action-label">Download</span>
        </button>
      </div>
    )}
  </nav>
</header>

<style>
  .header {
    min-height: 52px;
    display: flex;
    align-items: center;
    background: var(--bg, #f5f2e8);
    border-bottom: 1px solid var(--border, #e6e1d4);
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  /* Scroll-hide state (toggled via JS on guide page) */
  .header.is-hidden {
    transform: translateY(-100%);
    opacity: 0;
    pointer-events: none;
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .nav-left {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .brand {
    margin: 0;
    display: flex;
    align-items: center;
  }

  .brand a {
    line-height: 1;
    display: inline-flex;
    align-items: center;
  }

  /* Navigation links */
  .nav-link {
    font-size: 0.9rem;
    color: var(--muted);
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    transition: color 0.12s ease, background-color 0.12s ease;
  }

  .nav-link:hover {
    color: var(--pine);
    background: rgba(77, 89, 74, 0.08);
  }

  .nav-link.is-active {
    color: var(--pine);
    font-weight: 600;
    background: rgba(166, 181, 137, 0.2);
  }

  /* Guide page actions */
  .guide-actions {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.35rem 0.65rem;
    background: var(--pine);
    color: #fff;
    border: none;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .action-btn:hover {
    background: var(--ink);
    transform: translateY(-1px);
  }

  .action-icon {
    font-size: 0.9rem;
  }

  /* Mobile: hide labels, show only icons */
  @media (max-width: 600px) {
    .action-label {
      display: none;
    }

    .action-btn {
      padding: 0.4rem 0.5rem;
    }

    .nav-left {
      gap: 0.5rem;
    }

    .nav-link {
      font-size: 0.8rem;
      padding: 0.2rem 0.4rem;
    }
  }

  /* Print: hide header */
  @media print {
    .header {
      display: none !important;
    }
  }
</style>
